<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"

  android:orientation="vertical"
  android:paddingLeft="8dp"
  android:paddingRight="8dp"
  android:paddingTop="8dp">

  <android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">


      <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginBottom="8dp" />

      <TextView
        android:id="@+id/tv_nama_pariwisata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/image_view"
        android:textAppearance="@style/TextAppearance.Title" />

      <TextView
        android:id="@+id/tv_alamat_pariwisata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/tv_nama_pariwisata"
        android:textAppearance="@style/TextAppearance.Second" />

      <TextView
        android:id="@+id/tv_detail_pariwisata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/tv_alamat_pariwisata"
        android:textAppearance="@style/TextAppearance.Second" />



    </RelativeLayout>

  </android.support.v7.widget.CardView>




</LinearLayout>
